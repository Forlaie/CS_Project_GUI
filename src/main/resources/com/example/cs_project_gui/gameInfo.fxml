<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cs_project_gui.GameInfo_Controller">
   <children>
      <Button fx:id="backButton" cancelButton="true" focusTraversable="false" layoutX="-1.0" layoutY="1.0" mnemonicParsing="false" onAction="#clickBack" text="&lt;-" />
      <Label layoutX="217.0" layoutY="14.0" text="Game Info">
         <font>
            <Font size="36.0" />
